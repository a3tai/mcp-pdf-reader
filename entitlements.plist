<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Allow JIT compilation for Go runtime -->
	<key>com.apple.security.cs.allow-jit</key>
	<true/>

	<!-- Allow unsigned executable memory for Go runtime -->
	<key>com.apple.security.cs.allow-unsigned-executable-memory</key>
	<true/>

	<!-- Disable library validation to allow third-party libraries -->
	<key>com.apple.security.cs.disable-library-validation</key>
	<true/>

	<!-- Allow dyld environment variables -->
	<key>com.apple.security.cs.allow-dyld-environment-variables</key>
	<true/>

	<!-- Allow outbound network connections -->
	<key>com.apple.security.network.client</key>
	<true/>

	<!-- Allow reading files in user-selected directories -->
	<key>com.apple.security.files.user-selected.read-only</key>
	<true/>

	<!-- Allow reading/writing to user directories for PDF processing -->
	<key>com.apple.security.files.user-selected.read-write</key>
	<true/>

	<!-- Allow access to downloads folder -->
	<key>com.apple.security.files.downloads.read-write</key>
	<true/>

	<!-- Runtime hardening -->
	<key>com.apple.security.cs.runtime</key>
	<true/>
</dict>
</plist>
